{
  "version": "independent",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "admin"
  ],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "bump": "from-package"
    },
    "version": {
      "allowBranch": "master"
    }
  }
}
