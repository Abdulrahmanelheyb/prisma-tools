{
  "compilerOptions": {
    "module": "ESNext",
    "removeComments": true,
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
