{
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["esnext"],
    "importHelpers": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
