{
  "name": "root",
  "private": true,
  "devDependencies": {
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "prettier": "2.1.2",
    "pretty-quick": "3.1.0"
  },
  "workspaces": ["packages/*"],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"**/*.*(ts|tsx)\" --staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
