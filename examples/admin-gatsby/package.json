{
  "name": "prisma-admin-example",
  "description": "prisma example with gatsbyjs project to control your db",
  "main": "index.js",
  "author": "Ahmed Elywa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:AhmedElywa/prisma-tools.git",
    "directory": "examples/admin-gatsbyjs"
  },
  "private": true,
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"SERVER,ADMIN\" -c \"bgBlue.bold,bgMagenta.bold\" -i \"yarn server\" \"yarn admin\"",
    "i-all": "yarn && yarn i-server && yarn i-admin",
    "i-admin": "cd server && yarn",
    "i-server": "cd admin && yarn",
    "server": "cd server && yarn dev",
    "admin": "cd admin && yarn dev",
    "generate": "yarn generate:server && yarn generate:pages && yarn generate:graphql",
    "generate:pages": "ts-node --transpile-only generatePages",
    "generate:graphql": "cd admin && yarn codegen",
    "generate:server": "cd server && yarn generate"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"**/*.*(ts|tsx|graphql)\" --staged"
    }
  },
  "dependencies": {
    "concurrently": "^5.2.0"
  }
}
